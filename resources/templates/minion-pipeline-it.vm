  RUN_STAGE_TEST     : $properties.getBool('RUN_STAGE_TEST'),

  OVERRIDE_PARAMS     : [:],
  OVERRIDE_JOB_PARAMS : [:]
]

node(params.SLAVE_NODE_LABEL ?: defaultParams.SLAVE_NODE_LABEL) {
