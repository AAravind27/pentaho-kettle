Map defaultParams = [
  SLAVE_NODE_LABEL    : '$properties.getString('SLAVE_NODE_LABEL')',
  WORKSPACE           : '$properties.getString('WORKSPACE')',
  BUILD_DATA_ROOT_PATH: '$properties.getString('BUILD_DATA_ROOT_PATH')',
